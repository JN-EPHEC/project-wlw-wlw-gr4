  primary: '#F28B6F',
  primaryDark: '#D97757',
  accent: '#41B6A6',
  text: '#1F2937',
  textSecondary: '#6B7280',
  background: '#F9FAFB',
  surface: '#FFFFFF',
  border: '#E5E7EB',
  success: '#10B981',
